<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReporteFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="1sp"
        android:paddingLeft="2sp"
        android:paddingTop="1sp"
        android:paddingEnd="2sp">

        <Button
            android:id="@+id/buttonSIAPAME"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:drawablePadding="1dp"
            android:paddingLeft="1dp"
            android:paddingTop="1dp"
            android:paddingRight="1dp"
            android:paddingBottom="1dp"
            android:text="SIAPAME"
            android:textAlignment="inherit"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:visibility="visible"
            app:backgroundTint="@color/material_dynamic_neutral50"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonaAlumbradoPublico"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="32dp"
            android:text="ALUMBRADO PÚBLICO"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:backgroundTint="@color/material_dynamic_neutral50"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/buttonSIAPAME"
            app:layout_constraintTop_toTopOf="@+id/buttonSIAPAME" />

        <Button
            android:id="@+id/buttonObrasPublicas"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            android:text="OBRAS PÚBLICAS"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:backgroundTint="@color/material_dynamic_neutral50"
            app:layout_constraintEnd_toEndOf="@+id/buttonSIAPAME"
            app:layout_constraintStart_toStartOf="@+id/buttonSIAPAME"
            app:layout_constraintTop_toBottomOf="@+id/buttonSIAPAME" />

        <Button
            android:id="@+id/buttonAseoPublico"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            android:text="ASEO PÚBLICO"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:backgroundTint="@color/material_dynamic_neutral_variant50"
            app:layout_constraintEnd_toEndOf="@+id/buttonaAlumbradoPublico"
            app:layout_constraintStart_toStartOf="@+id/buttonaAlumbradoPublico"
            app:layout_constraintTop_toBottomOf="@+id/buttonaAlumbradoPublico" />

        <Button
            android:id="@+id/button6"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            android:text="PARQUES Y JARDINES"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:backgroundTint="@color/material_dynamic_neutral50"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonObrasPublicas" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
